<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/point_mainapp_demo_appPrimaryLightColor"
    tools:context=".view.home.HomeActivity">

    <TextView
        android:id="@+id/point_mainapp_demo_appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/point_mainapp_demo_app_3m"
        android:text="@string/point_mainapp_demo_app_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_app_go_to_payment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/point_mainapp_demo_app_6m"
        android:layout_marginTop="@dimen/point_mainapp_demo_app_3m"
        android:paddingVertical="@dimen/point_mainapp_demo_app_1_25m"
        android:text="@string/point_mainapp_demo_app_go_to_payment"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/point_mainapp_demo_app_1_25m"
        app:icon="@drawable/point_mainapp_demo_app_ic_payments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_mainapp_demo_appTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_appButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/point_mainapp_demo_app_6m"
        android:layout_marginTop="@dimen/point_mainapp_demo_app_2m"
        android:paddingVertical="@dimen/point_mainapp_demo_app_1_25m"
        android:text="@string/point_mainapp_demo_app_button_b"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/point_mainapp_demo_app_1_25m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_mainapp_demo_app_go_to_payment_button" />

</androidx.constraintlayout.widget.ConstraintLayout>